<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimaryDark">@color/full_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/grey_850</item>
        <item name="actionBarStyle">@style/MyActionBarTheme</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/blue</item>
        <item name="colorSecondary">@color/light_blue</item>
    </style>

    <style name="MyActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/grey_900</item>
    </style>

    <attr name="splashscreen_background_color" format="reference"/>

    <style name="Splashscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/full_black</item>
        <item name="splashscreen_background_color">@color/full_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>