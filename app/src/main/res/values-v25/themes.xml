<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ToDo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/grey_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:windowBackground">@color/grey_50</item>
        <item name="actionBarStyle">@style/MyActionBarTheme</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/blue</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MyActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/grey_100</item>
        <item name="colorControlHighlight">@color/blue</item>
    </style>>

    <style name="MyCustomActivityAnimation"
        parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">
            @anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">
            @anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">
            @anim/slide_out_right</item>
    </style>

    <style name="Splashscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/grey_300</item>
        <item name="splashscreen_background_color">@color/grey_50</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


</resources>